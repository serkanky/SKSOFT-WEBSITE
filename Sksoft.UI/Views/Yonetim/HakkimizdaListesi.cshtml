@model List<Sksoft.Entity.Hakkimizda>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@if(TempData["Durum"] != null)
{
    <div class="row">
        <span style="background-color: #ed4949;color:white;padding:10px;border-radius: 10px;width: 100%;float: left;margin-bottom: 10px;text-align: center;font-size: 18px;">@TempData["Durum"]</span>
    </div>
}

<table class="table">
    <tr>
        <td>#</td>
        <td>Resim</td>
        <td>Hakkımızda Başlığı</td>
        <td>Hakkımızda İçeriği</td>
        <td>İşlemler</td>
    </tr>
   @foreach (var item in Model)
   {
       <tr>
            <td>@item.ID</td>
            <td><img src="@item.Resim" width="140" /></td>
            <td>@item.Baslik</td>
            <td>@item.Icerik</td>
          
            <td>
                <a href="@Url.Action("HakkimizdaDuzenle","Yonetim", new {id = item.ID })" class="btn btn-primary"><i class="fa fa-pencil-square-o"></i></a>
                <a href="@Url.Action("HakkimizdaSil","Yonetim", new {id = item.ID })" class="btn btn-danger"><i class="fa fa-trash-o"></i></a>
            </td>
        </tr>
   }
</table>
